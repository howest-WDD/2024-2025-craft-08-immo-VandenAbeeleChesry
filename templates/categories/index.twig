
{% extends '_shared/_layout.twig' %}

{% block main %}

		<!-- Categories section -->
		<div class="container-fluid c-section ">
			<div
				class="c-categories">
				<!-- todo: Roep All Categories op en pas de title en subtitle aan.  -->
				{% set structureCategorie = craft.entries.section('categories').level(1).one() %}
				<h2 class="c-section__title">{{ structureCategorie.title }}</h2>
				<p class="c-section__subtitle">{{ structureCategorie.subtext }}</p>
				<!-- todo: Roep alle children van All  Categories op en loop ze over de cards. Vul de link, title en image dynamisch toe -->
				{% set structureCategorieChildren = structureCategorie.children.all() %}
				<!-- categories -->
				<div class="row g-3 justify-content-center c-section__content">
					<!-- category card  -->
					{% for c in structureCategorieChildren %}
						<a href="{{ c.url() }}" class="c-categories__card col-12 col-sm-3 col-lg-2">
							<div class="c-categories__info">
								<h3 class="c-categories__title">{{ c.title }}</h3>
								<p class="">2 properties</p>
							</div>
							<div class="c-categories__imgcontainer">
								<img src="{{ c.cover.one().url }}" alt="" class="c-categories__img">
							</div>
						</a>
					{% endfor %}
				</div>
			</div>

		</div>


{% endblock %}
